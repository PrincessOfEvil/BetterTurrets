<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>BetterTurrets_Hopper</defName>
		<label>ammo hopper</label>
		<description>Holds ammo for use by turrets, in case its weapon requires ammo. Cannot replace broken parts or barrels.</description>
		<thingClass>Building_Storage</thingClass>
		<graphicData>
			<texPath>Things/Building/Production/Hopper</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<damageData>
				<rect>(0.05,0.1,0.9,0.9)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.5</fillPercent>
		<pathCost>42</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>MortarShells</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<WorkToBuild>300</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.5</Flammability>
		</statBases>
		<costList>
			<Steel>15</Steel>
		</costList>
		<tickerType>Never</tickerType>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Security</designationCategory>
		<surfaceType>Item</surfaceType>
		<placeWorkers>
			<li>PlaceWorker_NextToHopperAccepter</li>
		</placeWorkers>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisites>
			<li>GunTurrets</li>
		</researchPrerequisites>
		<uiIconPath>Things/Building/Production/Hopper_MenuIcon</uiIconPath>
		<uiIconScale>0.85</uiIconScale>
	</ThingDef>

</Defs>
